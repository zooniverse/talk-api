apiVersion: batch/v1
kind: Job
metadata:
  name: __JOB_NAME__
spec:
  template:
    spec:
      containers:
      - name: talk-api-db-migrate-production
        image: ghcr.io/zooniverse/talk-api:__IMAGE_TAG__
        command: ["bundle",  "exec", "rake", "db:migrate"]
        envFrom:
        - secretRef:
            name: talk-common-env-vars
        - secretRef:
            name: talk-production-env-vars
        - configMapRef:
            name: talk-production-shared
      restartPolicy: Never
  backoffLimit: 1
